<h1> New Post </h1>
<p><%= link_to 'New Post', new_post_path %></p>
<%= form_for @post do |f| %>
  <%= f.label :title %>: 
  <%= f.text_field :title %>

  <%= f.label :author %> 
  <%= f.text_field :author %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.submit %>
<% end %>
<%= link_to 'Back', posts_path %>
